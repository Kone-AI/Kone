PORT=2000
TURNSTILE_KEY="0x4AAAAAA"
TURNSTILE_SECRET="0x4AAAAAA"

# Database Configuration
DB_NAME=kone
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# Authentication
JWT_SECRET=your_jwt_secret_here # Change this to a secure random string

# Rate Limiting
CHAT_RATE_LIMIT_REQUESTS=50     # Requests per 15 minutes for chat API
CHAT_RATE_LIMIT_WINDOW=900000   # 15 minutes in milliseconds

API_RATE_LIMIT_REQUESTS=100     # Requests per minute for API endpoints
API_RATE_LIMIT_WINDOW=60000     # 1 minute in milliseconds

# Security Configuration
TRUST_PROXY=false               # Enable if behind proxy/Cloudflare
ALLOWED_ORIGINS=*              # CORS allowed origins (comma-separated, * for all)
MAINTENANCE_MODE=false         # Enable maintenance mode
MAINTENANCE_MESSAGE="Maintenance in progress" # Custom maintenance message

# Provider Configuration
# OpenRouter (https://openrouter.ai/docs)
ENABLE_OPENROUTER=false
OPENROUTER_API_KEY="key_goes_here"
OPENROUTER_MODELS="mistral-medium,claude-2,gpt-4-turbo"

# Google AI (https://ai.google.dev/)
ENABLE_GOOGLE=false
GOOGLE_API_KEY="key_goes_here"
GOOGLE_MODELS="gemini-pro"

# Groq (https://console.groq.com/)
ENABLE_GROQ=false
GROQ_API_KEY="key_goes_here"
GROQ_MODELS="mixtral-8x7b-32768,llama2-70b-4096"

# HackClub (https://ai.hackclub.com)
ENABLE_HACKCLUB=true
HACKCLUB_MODELS="meta-llama/llama-4-scout-17b-16e-instruct"

# Voids.top (https://voids.top)
ENABLE_VOIDS=false
VOIDS_MODELS="gpt-4,gpt-3.5-turbo"

# Mistral (https://docs.mistral.ai)
ENABLE_MISTRAL=false
MISTRAL_API_KEY="key_goes_here"
MISTRAL_MODELS="mistral-large,mistral-medium"

# GitHub Copilot (https://github.com/M1noa/copilot-more-archive)
ENABLE_COPILOT_MORE=false
COPILOT_MORE_API_URL="https://localhost:15432"
COPILOT_MORE_API_KEY="key_goes_here"
COPILOT_MORE_MODELS="gpt-4"

# Feature Flags
DEBUG_MODE=false               # Enable detailed debug logging
ENABLE_LOGGING=true           # Enable request/response logging
ENABLE_STATS=true            # Enable usage statistics collection
LOG_REQUESTS=true            # Log incoming requests
LOG_RESPONSES=true           # Log outgoing responses
LOG_ERRORS=true             # Log errors in detail

# Performance
REQUEST_TIMEOUT=120000       # Request timeout in milliseconds
MAX_CONCURRENT=50            # Maximum concurrent requests
CACHE_DURATION=15           # Cache duration in seconds

# Size Limits
MAX_REQUEST_SIZE=15mb        # Max request size
MAX_HEADER_SIZE=1mb          # Max header size
MAX_PAYLOAD_SIZE=10mb        # Max payload size
MAX_TOKENS=350000            # Maximum tokens per request
